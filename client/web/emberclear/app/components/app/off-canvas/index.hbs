<MobileMenuWrapper @openDetectonWidth={{30}} as |mmw|>
  <KeyboardPress @key='ctrl+Space' @onDown={{this.sidebar.toggle}} />

  {{#if this.currentUser.isLoggedIn}}
    <mmw.MobileMenu as |mm|>

      <App::Sidebar
        class='sidebar-wrapper'
        id='sidebar'
      />

    </mmw.MobileMenu>
  {{/if}}

  <mmw.Content>
    {{yield}}
  </mmw.Content>
</MobileMenuWrapper>
